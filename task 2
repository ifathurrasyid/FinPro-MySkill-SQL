-- show the category with the biggest transaction value in year 2022 --

select *
from 
	sku_detail sd;

select *
from 
	order_detail od 
join
	sku_detail sd 
on
	od.sku_id = sd.id;
	
select
	sd.category as category,
	sum(od.after_discount) as "transaction value"
from
	sku_detail sd 
join
	order_detail od 
on
	od.sku_id = sd.id
where
	od.is_valid = 1
and 
extract
	(year from od.order_date) = 2022
group by
	category
order by
	"transaction value" desc
limit 
	1
;
